{
  "name": "alexkatzmusic-server",
  "version": "1.0.0",
  "description": "my person website server",
  "main": "dist/server.js",
  "repository": "https://github.com/alexkatz/alexkatzmusic.git",
  "author": "Alex Katz <alexanderikatz@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^13",
    "yarn": "^1.19"
  },
  "scripts": {
    "build-all": "rm -rf public && cd client && yarn install && yarn build && mkdir -p ../public && cp dist/* ../public && cd .. && yarn build",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "start": "node ./dist/server.js",
    "start-nodemon": "nodemon ./dist/server.js",
    "watch": "tsc -w -p tsconfig.json",
    "heroku-postbuild": "yarn build-all"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "nodemon": "^2.0.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
